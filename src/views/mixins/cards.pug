//- Card mixins
mixin product-card(product)
  .bg-white.rounded-lg.shadow-md.border.border-gray-200.overflow-hidden(class="hover:shadow-lg transition-shadow duration-300")
    if product.images && product.images.length > 0
      img.w-full.h-48.object-cover(src=product.images[0].url, alt=product.name)
    else
      .w-full.h-48.bg-gray-200.flex.items-center.justify-center
        i.fas.fa-image.text-gray-400.text-4xl
    
    .p-6
      h3.text-xl.font-semibold.mb-2= product.name
      p.text-gray-600.mb-4= product.description.substring(0, 100) + '...'
      
      .flex.justify-between.items-center.mb-4
        span.text-2xl.font-bold.text-blue-600= '$' + product.price
        span.bg-green-100.text-green-800.px-2.py-1.rounded-full.text-sm= product.stock + ' in stock'
      
      .flex.gap-2
        a.bg-blue-600(class="hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 inline-flex items-center gap-2", href=`/products/${product._id}`)
          i.fas.fa-eye
          | View
        a.bg-gray-600(class="hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 inline-flex items-center gap-2", href=`/products/${product._id}/edit`)
          i.fas.fa-edit
          | Edit