extends ../../layouts/auth
include ../../mixins/buttons

block content
  .card.p-8.shadow-2xl.max-w-md.w-full
    // Logo
    .text-center.mb-8
      i.fas.fa-user-plus.text-6xl.text-green-600.mb-4
      h2.text-3xl.font-bold.text-gray-900 Create Your Account
      p.text-gray-600.mt-2 Join us today and start managing your products efficiently
    
    // Register Form
    form.space-y-6
      .grid.grid-cols-1.md:grid-cols-2.gap-4
        .form-group
          label.block.text-sm.font-medium.text-gray-700.mb-2(for="firstName") First Name
          input.form-input(type="text", id="firstName", name="firstName", placeholder="First name", required)
        
        .form-group
          label.block.text-sm.font-medium.text-gray-700.mb-2(for="lastName") Last Name
          input.form-input(type="text", id="lastName", name="lastName", placeholder="Last name", required)
      
      .form-group
        label.block.text-sm.font-medium.text-gray-700.mb-2(for="email") Email Address
        .relative
          input.form-input.pl-10(type="email", id="email", name="email", placeholder="Enter your email", required)
          i.fas.fa-envelope.absolute.left-3.top-1/2.transform.-translate-y-1/2.text-gray-400
      
      .form-group
        label.block.text-sm.font-medium.text-gray-700.mb-2(for="password") Password
        .relative
          input.form-input.pl-10(type="password", id="password", name="password", placeholder="Create a password", required)
          i.fas.fa-lock.absolute.left-3.top-1/2.transform.-translate-y-1/2.text-gray-400
      
      .form-group
        label.block.text-sm.font-medium.text-gray-700.mb-2(for="confirmPassword") Confirm Password
        .relative
          input.form-input.pl-10(type="password", id="confirmPassword", name="confirmPassword", placeholder="Confirm your password", required)
          i.fas.fa-lock.absolute.left-3.top-1/2.transform.-translate-y-1/2.text-gray-400
      
      .form-group
        label.block.text-sm.font-medium.text-gray-700.mb-2(for="company") Company (Optional)
        input.form-input(type="text", id="company", name="company", placeholder="Your company name")
      
      .flex.items-center
        input#terms.mr-2(type="checkbox", name="terms", required)
        label.text-sm.text-gray-600(for="terms") I agree to the 
          a.text-blue-600.hover:text-blue-500(href="#") Terms and Conditions
          |  and 
          a.text-blue-600.hover:text-blue-500(href="#") Privacy Policy
      
      button.btn-primary.w-full.py-3.text-lg(type="submit")
        i.fas.fa-user-plus.mr-2
        | Create Account
      
      .text-center.mt-6
        .relative
          .absolute.inset-0.flex.items-center
            .w-full.border-t.border-gray-300
          .relative.flex.justify-center.text-sm
            span.px-2.bg-white.text-gray-500 Or continue with
      
      .grid.grid-cols-2.gap-4.mt-6
        button.w-full.bg-white.border.border-gray-300.rounded-md.px-4.py-2.text-sm.font-medium.text-gray-700.hover:bg-gray-50.flex.items-center.justify-center
          i.fab.fa-google.text-red-500.mr-2
          | Google
        button.w-full.bg-white.border.border-gray-300.rounded-md.px-4.py-2.text-sm.font-medium.text-gray-700.hover:bg-gray-50.flex.items-center.justify-center
          i.fab.fa-facebook.text-blue-600.mr-2
          | Facebook
    
    // Login link
    .text-center.mt-8
      p.text-gray-600 Already have an account? 
        a.text-blue-600.hover:text-blue-500.font-medium(href="/auth/login") Sign in here