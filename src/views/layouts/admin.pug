doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || 'Admin Dashboard'
    
    // Font Awesome CDN
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css", rel="stylesheet")
    
    // Tailwind CSS CDN
    script(src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4")
    
    // Custom CSS
    style.
      .btn-primary {
        @apply bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200;
      }
      .btn-secondary {
        @apply bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200;
      }
      .card {
        @apply bg-white rounded-lg shadow-md border border-gray-200;
      }
    
    block head

  body.bg-gray-100
    .flex.h-screen
      // Sidebar
      aside.w-64.bg-gray-800.text-white.flex.flex-col.h-full
        // Logo
        .p-6.border-b.border-gray-700
          .flex.items-center
            i.fas.fa-cog.text-2xl.text-blue-400.mr-3
            span.text-xl.font-bold Admin Panel
        
        // User Info
        .p-6.border-b.border-gray-700
          .flex.items-center
            img.w-10.h-10.rounded-full(src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100", alt="Admin")
            .ml-3
              p.font-medium Admin User
              p.text-sm.text-gray-400 Administrator
        
        // Navigation
        nav.flex-1.p-4
          ul.space-y-2
            li
              a.flex.items-center.px-4.py-2.text-gray-300.hover.bg-gray-700.hover.text-white.rounded-md.transition-colors(href="/admin")
                i.fas.fa-tachometer-alt.mr-3
                | Dashboard
            li
              a.flex.items-center.px-4.py-2.text-gray-300.hover.bg-gray-700.hover.text-white.rounded-md.transition-colors(href="/admin/products")
                i.fas.fa-box.mr-3
                | Products
            li
              a.flex.items-center.px-4.py-2.text-gray-300.hover.bg-gray-700.hover.text-white.rounded-md.transition-colors(href="/admin/users")
                i.fas.fa-users.mr-3
                | Users
            li
              a.flex.items-center.px-4.py-2.text-gray-300.hover.bg-gray-700.hover.text-white.rounded-md.transition-colors(href="/admin/categories")
                i.fas.fa-tags.mr-3
                | Categories
        
        // Logout
        .p-4.border-t.border-gray-700
          a.flex.items-center.px-4.py-2.text-gray-300.hover.bg-gray-700.hover.text-white.rounded-md.transition-colors(href="/logout")
            i.fas.fa-sign-out-alt.mr-3
            | Logout
      
      // Main Content
      .flex-1.flex.flex-col.overflow-hidden
        // Top Navigation
        header.bg-white.shadow-sm.border-b.border-gray-200
          .px-6.py-4
            .flex.items-center.justify-between
              h1.text-2xl.font-semibold.text-gray-900= pageTitle || 'Dashboard'
              .flex.items-center.space-x-4
                .relative
                  button.flex.items-center.text-sm.rounded-full.focus.outline-none.focus.ring-2.focus.ring-blue-500
                    img.h-8.w-8.rounded-full(src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100", alt="Admin")
                    span.ml-2.text-gray-700 Admin User
        
        // Page Content
        main.flex-1.overflow-x-hidden.overflow-y-auto.bg-gray-100.p-6
          block content
    
    // JavaScript
    script(src="/js/admin.js")
    
    block scripts